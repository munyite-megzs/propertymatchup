<h1>Appartment Listings</h1>

<h3>New starter? click the link below</h3>
<%= link_to 'New appartment', new_appartment_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="2"></th>
  </tr>
<% @appartments.each do |appartment| %>

 <tr>
      <td><%= appartment.title %></td>
      <td><%= appartment.description %></td>
      <td><%= link_to 'Show', appartment_path(appartment) %></td>
      <td><%= link_to 'Edit', edit_appartment_path(appartment) %>

      <td><%= link_to 'destroy', appartment_path(appartment),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
              </td>
      </td>
    </tr>

<% end %>

</table>